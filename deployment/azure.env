# Azure Production Environment Configuration
# Set these in your Azure deployment system (App Service, Container Apps, etc.)

# Frontend Configuration
FRONTEND_DOMAIN=docquery.yourdomain.com
FRONTEND_URL=https://docquery.yourdomain.com
BACKEND_URL=https://docquery-api.yourdomain.com

# Backend Configuration
BACKEND_HOST=docquery-api.yourdomain.com
BACKEND_PORT=443

# Database Configuration (Azure SQL)
DATABASE_CONNECTION_STRING="Server=tcp:your-server.database.windows.net,1433;Initial Catalog=DocQueryService;Persist Security Info=False;User ID=your-admin;Password=your-password;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"

# OpenTelemetry Configuration (Honeycomb.io)
OTEL_ENDPOINT=https://api.honeycomb.io
OTEL_HEADERS="x-honeycomb-team=your-api-key"
HONEYCOMB_API_KEY=your-honeycomb-api-key
HONEYCOMB_FRONTEND_DATASET=docquery-frontend-azure-prod
HONEYCOMB_BACKEND_DATASET=docquery-backend-azure-prod

# Security Configuration
CORS_ORIGIN=https://docquery.yourdomain.com
ALLOWED_CONNECT_ORIGINS="https://docquery-api.yourdomain.com"

# Feature Flags
ENABLE_METRICS=true