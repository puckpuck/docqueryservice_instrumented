# AWS Production Environment Configuration
# Set these in your AWS deployment system (ECS, EKS, App Runner, etc.)

# Frontend Configuration
FRONTEND_DOMAIN=docquery.example.com
FRONTEND_URL=https://docquery.example.com
BACKEND_URL=https://api.docquery.example.com

# Backend Configuration
BACKEND_HOST=api.docquery.example.com
BACKEND_PORT=443

# Database Configuration (RDS or Aurora)
DATABASE_CONNECTION_STRING="Server=docquery-db.cluster-abc123.us-east-1.rds.amazonaws.com,1433;Database=DocQueryService;User Id=admin;Password=${DB_PASSWORD};TrustServerCertificate=true;"

# Alternative individual DB settings
DB_SERVER=docquery-db.cluster-abc123.us-east-1.rds.amazonaws.com
DB_PORT=1433
DB_DATABASE=DocQueryService
DB_USERNAME=admin
# DB_PASSWORD=set-via-secrets-manager

# OpenTelemetry Configuration (Honeycomb.io)
OTEL_ENDPOINT=https://api.honeycomb.io
OTEL_HEADERS="x-honeycomb-team=${HONEYCOMB_API_KEY}"
HONEYCOMB_API_KEY=${HONEYCOMB_API_KEY}  # Set via AWS Secrets Manager
HONEYCOMB_FRONTEND_DATASET=docquery-frontend-aws-prod
HONEYCOMB_BACKEND_DATASET=docquery-backend-aws-prod

# Security Configuration
CORS_ORIGIN=https://docquery.example.com
ALLOWED_CONNECT_ORIGINS="https://api.docquery.example.com"

# Feature Flags
ENABLE_METRICS=true

# AWS-specific configuration
AWS_REGION=us-east-1
ECS_CLUSTER=docquery-prod
SERVICE_DISCOVERY_NAMESPACE=docquery.local